<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head'); %>
  </head>

  <body class='container'>
    <header><%- include('partials/header') %></header>
    <main>
      <div class="jumbotron">
        <% if(locals.error) { %>
          <div class="alert alert-danger alert-dismissible fade show">
            <strong>Error!</strong> <%= locals.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert">X</button>
          </div>
        <% } %>
        <%- body %>
      </div>
    </main>
    <!--<x if(locals.title!="Login" && locals.title!="Registration") { x>-->
    <img id="mascot" src="https://creazilla-store.fra1.digitaloceanspaces.com/cliparts/29599/eco-man-clipart-xl.png"/>
    <style>
      #mascot {
        opacity: 0.1;
        /*position: absolute;*/
        transform: scale(1.5) rotate(30deg);
        /*z-index: -1;*/
        pointer-events: none;
        position: absolute;
        left: 0;
        top: 100px;
      }
      .dark-mode {
        background-color: #333;
        color: white;
      }
    </style>
    <!--<x } x>-->

    <footer><%- include('partials/footer'); %></footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script type="text/javascript">
      function toggleDarkMode() {
        var element = document.body;
        element.classList.toggle("dark-mode");
      }

      function enableShortcuts() {
        document.onkeyup = function(e) {
          //Dark mode on ctrl+ald+d
          if (e.ctrlKey && e.altKey && e.which == 68) {
            toggleDarkMode();
          }
          //Go to home on ctrl+alt+h
          if (e.ctrlKey && e.altKey && e.which == 72) {
            window.location.href = "/";
          }
          //Go to profile on ctrl+alt+p
          if (e.ctrlKey && e.altKey && e.which == 80) {
            window.location.href = "/umm/users/profile";
          }
          //Go to about on ctrl+alt+a
          if (e.ctrlKey && e.altKey && e.which == 65) {
            window.location.href = "/about";
          }
          //Go to game on ctrl+alt+g
          if (e.ctrlKey && e.altKey && e.which == 71) {
            window.location.href = "/game";
          }
          //Go to leaderboard on ctrl+alt+b
          if (e.ctrlKey && e.altKey && e.which == 66) {
            window.location.href = "/lbm/board/leaderboard";
          }
          //Go to forum on ctrl+alt+f
          if (e.ctrlKey && e.altKey && e.which == 70) {
            window.location.href = "/forum";
          }
          //Go to community on ctrl+alt+c
          if (e.ctrlKey && e.altKey && e.which == 67) {
            window.location.href = "/umm/community";
          }
          //Go to sign out on ctrl+alt+s
          if (e.ctrlKey && e.altKey && e.which == 83) {
            window.location.href = "/umm/users/logout";
          }
          //Jump to first input field on ctrl+alt+1
          if (e.ctrlKey && e.altKey && e.which == 49) {
            document.getElementsByTagName("input")[0].focus();
          }
          //Jump to second input field on ctrl+alt+2
          if (e.ctrlKey && e.altKey && e.which == 50) {
            document.getElementsByTagName("input")[1].focus();
          }
          //Jump to third input field on ctrl+alt+3
          if (e.ctrlKey && e.altKey && e.which == 51) {
            document.getElementsByTagName("input")[2].focus();
          }
        };
      };

      window.onload = function() {
        enableShortcuts();
      };
      
    </script>
  </body>
</html>
